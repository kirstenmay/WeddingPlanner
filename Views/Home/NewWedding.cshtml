@{
    ViewData["Title"] = "New Wedding";
}

@model Wedding
<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="WeddingPlanner">Wedding Planner</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
            aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1">
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="WeddingPlanner">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="LogOut">Logout</a>
            </li>
        </ul>
    </div>
</nav>
<div class="text-center">
    <h1 class="display-4">Plan a new wedding!</h1>
</div>
<div class="row">
    <div class="col-6 offset-3">
        <form asp-action="CreateWedding" method="post">
            <div class="form-group">
                <label asp-for="WedderOne">Wedder One</label>
                <input type="text" asp-for="WedderOne" class="form-control" placeholder="Ex. John Smith">
                <span asp-validation-for="WedderOne"></span>
            </div>
            <div class="form-group">
                <label asp-for="WedderTwo">Wedder Two</label>
                <input type="text" asp-for="WedderTwo" class="form-control" placeholder="Ex. Jane Smith">
                <span asp-validation-for="WedderTwo"></span>
            </div>
            <div class="form-group">
                <label asp-for="Date">Date</label>
                <input type="date" asp-for="Date" class="form-control">
                <span asp-validation-for="Date"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address">Wedding Address</label>
                <input type="text" asp-for="Address" class="form-control" placeholder="Ex. 123 First Ave NE">
                <span asp-validation-for="Address"></span>
            </div>
            <div class="text-center">
                <input type="submit" class="btn btn-outline-info" value="Create">
            </div>
        </form>
    </div>
</div>